
<h3>Admin Panel</h3>

List of Trains - <a href="/train_new">Add Train</a><br>
  <div id="trains">
    <% if @trains.any?() %>
    <% @trains.each do |train| %>
    <ul>
      <li><a href="/admin/train/<%=train.id()%>"> <%= train.route() %> </a></li>
    </ul>
    <% end  %>
  <%else  %>
  There are no trains
  <% end  %>
</div>

List of Cities - <a href="/city_new">Add City</a><br>
<div id="cities">
<% if @cities.any?() %>
    <% @cities.each do |city| %>
    <ul>
      <li><a href="/admin/city/<%=city.id()%>"> <%= city.name() %> </a></li>
    </ul>
    <% end  %>
  <%else  %>
  There are no cities
  <% end  %>
</div>
